<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="Console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{ISO8601}] [%t] [%X{login}] [%C{3}.%M] %m%n" />
		</layout>
	</appender>

	<appender name="File" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${catalina.home}/logs/adl.log" />
		<param name="MaxFileSize" value="1000KB" />
		<param name="MaxBackupIndex" value="20" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{ISO8601}] [%t] [%X{session_id}] [%X{login}] [%C{3}.%M] %m%n" />
		</layout>
	</appender>
	
	<logger name="br.com.sebrae">
		<level value="trace" />
	</logger>
	
	<logger name="org.primefaces">
		<level value="trace" />
	</logger>
	
	<logger name="org.apache">
		<level value="trace" />
	</logger>
	
	<logger name="javax.faces">
		<level value="trace" />
	</logger>
	
	<logger name="org.hibernate">
		<level value="warn" />
	</logger>

	<!-- Log Hibernate SQL queries to file (log level must be DEBUG to enable it) 
	<logger name="org.hibernate.SQL" additivity="false">
		<level value="debug" />
		<appender-ref ref="File" />
	</logger>-->

	<logger name="org.hibernate.type">
		<level value="trace" />
	</logger>

	<root>
		<priority value="debug" />
		<appender-ref ref="Console" />
		<appender-ref ref="File" />
	</root>
</log4j:configuration>